// Ryan Seddon, you legend.
.hide-checkbox, .show-checkbox
  opacity: 1 !important
.hide-checkbox input,
.hide-checkbox h2
  transition: opacity 2s ease
  opacity: 0
.show-checkbox.bespoke-bullet-active input,
.show-checkbox.bespoke-bullet-active h2
  opacity: 1
.takeoff
  width: 100px;
  height: 200px;
  margin: 0 auto;
  position: relative;
  left: 22px;
.takeoff input + label
  width: 56px;
  height: 118px;
  background: url('../images/rocket.png') 0 0 no-repeat;
  display: block;
  transition: transform 8s;
  transition-timing-function: cubic-bezier(0.38, -0.1, 0.46, 0.45);
.takeoff input:checked + label
  height: 156px;
  background-position: 0 100%;
  transform: translateY(-20em);
.takeoff input ~ .stars
  background: url('../images/star-background.jpg')
  opacity: 0.4;
  background-size: cover
  position: absolute
  z-index: -2
  left: -500px
  top: -1000px
  width: 1100px
  height: 2000px
  transition: all 5s ease
.takeoff input:checked ~ .stars
  transform: translateY(200px)
  transition: all 10s ease
  transition-delay: .3s
.takeoff input ~ .planet
  position: absolute;
  bottom: -1950px;
  left: -980px;
  width: 2040px;
  height: 2040px;
  background: #222;
  box-shadow: 0 0 100px rgba(100%, 100%, 100%, 0.5);
  border-radius: 2040px;
  z-index: -1;
  transition: all 5s ease
  transition-delay: .3s
.takeoff input:checked ~ .planet
  transform: translateY(400px)
